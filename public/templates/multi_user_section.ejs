    accomplishment_report_section.querySelector("#new_accomplishment_form_tab");
  const slideValue = new_accomplishment_form_tab.querySelector("#sliderValue");
  const inputSlider = new_accomplishment_form_tab.querySelector("#percentage");
  const ar_date_finished =
    new_accomplishment_form_tab.querySelector("#ar_date_finished");
